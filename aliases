function lazygit() {
    git add .
    git commit -a -m "$1"
    git push
}


function p() {
    sudo netstat -ltnp | grep -w ':$1'
}


function getmicro() {
   curl https://getmic.ro | bash
   sudo cp ./micro /usr/bin
}

