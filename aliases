# Run a bash shell in the specified container.
#
dbash() {
  if [ $# -ne 1 ]; then
    echo "Usage: $FUNCNAME CONTAINER_ID"
    return 1
  fi

  docker exec -it $1 /bin/bash
}


function ta() {
    tail -f -n 300 $1
}

